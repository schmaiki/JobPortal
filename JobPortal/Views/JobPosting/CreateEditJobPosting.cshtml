@model JobPortal.Models.JobPosting

@{
    ViewData["Title"] = "Erstellen oder Bearbeiten";
}

<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">

    <div class="card">

        <div class="card-header">
            <h5>Inserat bearbeiten</h5>
        </div>

        <div class="card-body">

            <input hidden asp-for="Id" />

            <div class="row form-group">
                <div class="col ">
                    <label>Jobbezeichnung:</label>
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Bitte trage eine Jobbezeichnung ein" />
                </div>
                <div class="col">
                    <label>Arbeitsort:</label>
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <label>Jobbeschreibung:</label>
                    <textarea rows="6" class="form-control" asp-for="Description" placeholder="Bitte trage eine ausführliche Beschreibung ein"></textarea>
                </div>
            </div>


            <div class="row form-group">
                <div class="col-6">
                    <label>Jahresgehalt:</label>
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Wieviel Jahresgehalt zahlt ihr?" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-3">
                    <div class="col-form-label">
                        Wann startet der Job?
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>

            <hr />

            <div class="row form-group">
                <div class="col">
                    <label>Firmenname:</label>
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Wie heißt deine Firma?" />
                </div>
                <div class="col">
                    <label>Webseite:</label>
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="https://www.firmenname.de" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col">
                    <label>Telefon:</label>
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Telefonnummer" />
                </div>
                <div class="col">
                    <label>E-Mail Adresse:</label>
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="bewerbung@firmenname.de" />
                </div>
            </div>

            <div class="row form-group">  
                <div class="col">
                    <label>Firmenlogo</label>
                    <input class="form-control-file" name="file" type="file" />
                </div>
            </div>

        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>

</form>